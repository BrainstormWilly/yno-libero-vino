# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app.herokuapp.com
SCOPES=read_customers,read_orders,read_products,write_discounts

# Commerce7 Configuration
COMMERCE7_KEY=your_commerce7_api_key
# Install webhook authentication (set in Commerce7 app settings)
COMMERCE7_USER=your_commerce7_username
COMMERCE7_PASSWORD=your_commerce7_password
COMMERCE7_WEBHOOK_SECRET=your_commerce7_webhook_secret
# Webhook basic auth password (username is 'liberovino')
COMMERCE7_WEBHOOK_PASSWORD=your_commerce7_webhook_password
# Note: tenant comes dynamically from auth (like shop for Shopify)

# Application Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=your_session_secret_key_here

# Development Testing (bypass C7 embedding)
# Set to "no" to use fake auth session for local testing
# Leave blank or set to "yes" for production/embedded testing
IN_COMMERCE7=no

# Domain Configuration (for subdomain routing)
# Set your production domain here (without subdomain)
# Example: yourdomain.com
# The app will automatically handle c7.yourdomain.com and shp.yourdomain.com
BASE_DOMAIN=yourdomain.com
COMMERCE7_SUBDOMAIN=c7
SHOPIFY_SUBDOMAIN=shp

# Ngrok Configuration (for development/testing webhooks)
# Set your Ngrok URL here (without protocol, without subdomain)
# Example: kindly-balanced-macaw.ngrok-free.app
# The app will use this instead of BASE_DOMAIN when NODE_ENV=development
NGROK_URL=kindly-balanced-macaw.ngrok-free.app

# Communication Platform Defaults (optional - clients can configure their own)
# Mailchimp (Marketing)
MAILCHIMP_CLIENT_ID=your_mailchimp_oauth_client_id
MAILCHIMP_CLIENT_SECRET=your_mailchimp_oauth_client_secret
MAILCHIMP_API_KEY=your_mailchimp_marketing_api_key
MAILCHIMP_ACCESS_TOKEN=temporary_oauth_access_token
MAILCHIMP_SERVER_PREFIX=us21
MAILCHIMP_FROM_EMAIL=support@liberovino.com
MAILCHIMP_FROM_NAME=LiberoVino

# Klaviyo
KLAVIYO_API_KEY=your_klaviyo_api_key

# SendGrid (LiberoVino-managed fallback)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@liberovino.com
SENDGRID_FROM_NAME=LiberoVino

# RedChirp (wine industry SMS)
REDCHIRP_API_KEY=your_redchirp_api_key
REDCHIRP_FROM_NUMBER=+15551234567

# Twilio (backup SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+15551234567
