# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app.herokuapp.com
SCOPES=read_customers,read_orders,read_products,write_discounts

# Commerce7 Configuration
COMMERCE7_KEY=your_commerce7_api_key
COMMERCE7_USER=your_commerce7_username
COMMERCE7_PASSWORD=your_commerce7_password
COMMERCE7_TENANT=your_commerce7_tenant
COMMERCE7_WEBHOOK_SECRET=your_commerce7_webhook_secret

# Application Configuration
NODE_ENV=production
PORT=3000

# Domain Configuration (for subdomain routing)
# Set your production domain here (without subdomain)
# Example: yourdomain.com
# The app will automatically handle c7.yourdomain.com and shp.yourdomain.com
BASE_DOMAIN=yourdomain.com
COMMERCE7_SUBDOMAIN=c7
SHOPIFY_SUBDOMAIN=shp

# Ngrok Configuration (for development/testing webhooks)
# Set your Ngrok URL here (without protocol, without subdomain)
# Example: kindly-balanced-macaw.ngrok-free.app
# The app will use this instead of BASE_DOMAIN when NODE_ENV=development
NGROK_URL=kindly-balanced-macaw.ngrok-free.app
